# DiceRollerSimulator Backend Environment Variables
# Local development configuration

# Server Configuration
NODE_ENV=development
PORT=3000
APP_NAME=DiceRollerSimulator
API_VERSION=v1

# Stripe Configuration (dummy values for local testing)
STRIPE_SECRET_KEY=sk_test_dummy_key_for_local_dev
STRIPE_PUBLISHABLE_KEY=pk_test_dummy_key_for_local_dev
STRIPE_WEBHOOK_SECRET=whsec_dummy_secret_for_local_dev

# Database Configuration (SQLite for local dev)
DATABASE_URL=sqlite://./local_dev.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diceroller_db
DB_USER=localuser
DB_PASSWORD=localpass

# JWT Configuration
JWT_SECRET=local_dev_jwt_secret_key_make_it_long_and_random_enough_for_security
JWT_EXPIRES_IN=7d

# Apple Configuration
APPLE_BUNDLE_ID=com.tiation.DiceRollerSimulator
APPLE_TEAM_ID=local_dev_team

# Email Configuration
FROM_EMAIL=noreply@localhost
SUPPORT_EMAIL=support@localhost

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=local_dev_token

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
ENABLE_PREMIUM_DICE=true
ENABLE_ANALYTICS=false
ENABLE_PUSH_NOTIFICATIONS=false

# URLs
CLIENT_URL=http://localhost:3001
API_URL=http://localhost:3000
WEBHOOK_URL=http://localhost:3000/webhooks/stripe
